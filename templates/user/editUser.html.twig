{% extends 'base.html.twig' %}

{% block body %}

    <div class="container margin-top-20">
        <div class="row justify-content-center">
            <table class="table mytable table-hover col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
                <thead>
                    <tr>
                        <th colspan="3" class="text-center">
                            Nutzer bearbeiten
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th class="tab-button align-middle">
                            Nutzername
                        </th>
                        <td class="align-middle">
                            {{ user.username }}
                        </td>
                        <td class="tab-button text-center">
                            <a href="{{ path('change_username', {'user': user.id}) }}">
                                <button class="btn btn-sm btn-secondary tab-button">
                                    Ändern
                                </button>
                            </a>
                        </td>
                    </tr>
                    {% if user.roles[0] != 'ROLE_ADMIN' %}
                    <tr>
                        <th class="align-middle">
                            Rolle
                        </th>
                        <td class="align-middle">
                            {% if user.roles is not empty and user.roles[0] == 'ROLE_ADMIN' %}
                                    Administrator
                            {% else %}
                                Standardnutzer
                            {% endif %}
                        </td>
                        <td class="tab-button text-center">
                            <a href="{{ path('change_role', {'user': user.id}) }}">
                                <button class="btn btn-sm btn-secondary tab-button">
                                    Ändern
                                </button>
                            </a>
                        </td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th colspan="2" class="align-middle">
                            Passwort
                        </th>
                        <td class="tab-button text-center">
                            <a href="#">
                                <button class="btn btn-sm btn-secondary tab-button">
                                    Ändern
                                </button>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}