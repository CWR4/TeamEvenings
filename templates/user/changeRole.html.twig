{% extends 'base.html.twig' %}

{% block title %}MovieTime! - Rolle ändern{% endblock %}

{% block body %}

<div class="container margin-top-20">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-header text-center">
                <h3 class="h3 font-weight-normal no-margin">
                    Rolle ändern:
                </h3>
            </div>
            <div class="card-body text-center">
                {{ user.username }}
                <br />
                {% if user.roles is not empty and user.roles[0] == 'ROLE_ADMIN' %}
                    Administrator
                {% else %}
                    Standardnutzer
                {% endif %}
                <hr class="my-4" />
                {{ form_start(form) }}
                {{ form_widget(form.roles) }}
                <button type="submit" class="btn btn-sm btn-secondary margin-top-20 tab-button">
                    Speichern
                </button>
                <a href="{{ path('edit_user', {'id': user.id}) }}">
                    <button type="button" class="btn btn-sm btn-outline-secondary margin-top-20 tab-button">
                        Abbruch
                    </button>
                </a>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}