{% extends 'base.html.twig' %}

{% block title %}MovieTime!{% endblock %}

{% block body %}
<div class="container margin-top-20">
    <div class="row justify-content-around">
        {% if movienight != null %}
            <div class="col-lg-8">
                <div class="jumbotron">
                    <h3 class="text-center">
                        {{ movienight.date|date('d.m.Y') }} - {{ movienight.time|date('H:i') }} - {{ movienight.location }}
                    </h3>
                    <div class="row margin-top-20">
                        <div class="col-4 text-center">
                            <img style="width: 150px" src="{{ movienight.movie.poster }}">
                        </div>
                        <div class="col-8">
                            <h4>{{ movienight.movie.title }}</h4>
                            {{ movienight.movie.plot }}
                            <p class="align-items-end">
                                {{ movienight.movie.runtime }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-lg-5 text-center">
                <div class="jumbotron">
                    <i class="{{ 'af.logo.movie'|trans }} fa-10x" aria-hidden="true"></i>
                    <h3 class="margin-top-20">Kein Filmabend geplant <i class="far fa-frown"></i></h3>
                </div>
            </div>
        {% endif %}


        <!--
        <div class="col-lg-5 text-center">
            <div class="jumbotron">
                <i class="{{ 'af.logo.game'|trans }} fa-10x" aria-hidden="true"></i>
                <p>{{ 'home.next'|trans }}</p>
                <h1>{{ 'navigation.gamenight'|trans }}</h1>
            </div>
        </div>
        -->
    </div>
</div>
{% endblock %}
