<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MovieTime!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/mycss.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block navigation %}

            <header>
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container">
                    <a class="navbar-brand" href="{{ path('base') }}">
                        <i class="fas fa-home" aria-hidden="true"></i>
                        {{ 'navigation.home'|trans }}
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="nav navbar-nav ml-md-auto">
                            <li class="nav-item">
                                <a href="{{ path('omdb') }}" class="nav-link">
                                    <i class="{{ 'af.logo.movie'|trans }}" aria-hidden="true"></i>
                                    {{ 'navigation.movienight'|trans }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('movie_night') }}" class="nav-link">
                                    <i class="{{ 'af.logo.movie'|trans }}" aria-hidden="true"></i>
                                    {{ 'navigation.movienight'|trans }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('list_movienight') }}" class="nav-link">
                                    <i class="{{ 'af.logo.movie'|trans }}" aria-hidden="true"></i>
                                    {{ 'navigation.movienight'|trans }}
                                </a>
                            </li>
                            <!--
                            <li class="nav-item">
                                <a href="{{ path('hallo') }}" class="nav-link">
                                    <i class="fab fa-d-and-d" aria-hidden="true"></i>
                                    {{ 'navigation.gamenight'|trans }}
                                </a>
                            </li>
                            -->
                        </ul>

                        <ul class="nav navbar-nav ml-md-auto">
                            {% if app.user %}
                                <li class="nav-item">
                                    <a href="{{ path('app_logout') }}" class="nav-link">
                                        <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                                        {{ 'navigation.logout'|trans }}
                                    </a>
                                </li>
                            {% else  %}
                                <li class="nav-item">
                                    <a href="{{ path('app_login') }}" class="nav-link">
                                        <i class="fas fa-sign-in-alt" aria-hidden="true"></i>
                                        {{ 'navigation.login'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    </div>
                </nav>
            </header>

        {% endblock %}

        {% for message in app.flashes('warning') %}
            <div class="container margin-top-20 flash-width-300 text-center">
                <div class="alert alert-warning" role="alert">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="container margin-top-20 flash-width-300 text-center">
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
