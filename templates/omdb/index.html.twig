{% extends 'base.html.twig' %}

{% block body %}

<div class="container margin-top-20">
    <div class="row justify-content-center">
        {{ form_start(form, {'attr': {'class': 'form-inline text-center'}}) }}

        {{ form_widget(form.Title, {'attr': { 'class': 'form-inline',
                                            'placeholder': 'movie.placeholder'|trans}}) }}

        <button type="submit" class="btn btn-secondary input-group-append">
            {{ 'btn.search'|trans }}
        </button>

        {{ form_end(form) }}
    </div>

    <div class="row justify-content-center margin-top-20">
        {% if movies %}
        <table class="table" style="width: 900px">
            <thead>
                <tr>
                    <th scope="col" class="tab-poster">Poster</th>
                    <th scope="col" style="width: auto">Titel und Jahr</th>
                    <th scope="col" class="tab-button">Options</th>
                </tr>
            </thead>
            <tbody>
                {% for movie in movies %}
                <tr>
                    <td class="text-center">
                        {% if(movie.Poster == 'N/A') %}
                            <i class="{{ 'af.logo.movie'|trans }} fa-2x tab-poster" aria-hidden="true"></i>
                        {% else %}
                            <img class="tab-poster" src="{{ movie.Poster }}">
                        {% endif %}
                    </td>
                    <td>
                        {{ movie.Title }}
                        <br/>
                        {{ movie.Year }}
                    </td>
                    <td>
                        Zu Event hinzuf√ºgen
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
    <div class="row justify-content-center margin-top-20">
        <ul class="pagination">
            {% if pagination %}
                {% for page in pagination %}
                    <li class="page-item">
                        <a href="{{ page }}" class="page-link">{{ loop.index }}</a>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>

{% endblock %}
